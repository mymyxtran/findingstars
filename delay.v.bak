module frameCounter(clk, resetn, R, Q, count_en);

	parameter n = 22;
	
	input clk, resetn, count_en;
	input[n-1:0] R;

	output reg[n-1:0] Q;
	
	always@(posedge clk, negedge resetn) begin
		if(resetn == 0)
			Q <= 0;
		else if (Q == 0) begin
			Q <= R;
			end
		else if(count_en)
			Q <= Q - 1;
	
	end


endmodule